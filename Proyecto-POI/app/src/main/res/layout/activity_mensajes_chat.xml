<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llChatBubble"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:padding="2dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:id="@+id/llChat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/esquinas_redondas"
        android:minWidth="230dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingHorizontal="16pt"
        android:paddingVertical="8pt">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            tools:text="Don panchiro" />

        <ImageView
            android:id="@+id/ivImagenMensaje"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvArchivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="#EEEEEE"
            android:drawableLeft="@drawable/ic_baseline_attach_file_24_black"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Decargar Archivo"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            tools:text="Hola, como te a ido? todo bien?" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            tools:text="22:33pm" />
    </LinearLayout>

</FrameLayout>

