<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="2sp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="16dp"
    android:paddingVertical="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_goneMarginBaseline="2dp">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/ciFotoGrupo"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:src="@drawable/saturn"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rlNombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:text="Nombre del equipo" />

            <TextView
                android:id="@+id/rlFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:text="Fecha" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rlMensaje"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"


                android:layout_weight="1"
                android:fallbackLineSpacing="false"
                android:maxLines="3"
                android:textColor="#575757"
                android:textSize="13dp"
                tools:text="Esta es una tarea bien chida" />

            <LinearLayout
                android:id="@+id/llLayoutEntregado"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvEntregado"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="Entregado"
                    android:textColor="@color/teal_200"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
